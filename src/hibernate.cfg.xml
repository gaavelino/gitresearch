<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/git</property>
<property name="hibernate.connection.username">git</property>
<property name="hibernate.connection.password">git</property>
<property name="hibernate.connection.pool_size">10</property>
<property name="show_sql">true</property>
<property name="dialect">org.hibernate.dialect.MySQLDialect</property>
<property name="hibernate.current_session_context_class">thread</property>
<!-- <property name="hbm2ddl.auto">create-drop</property> -->
<mapping class="dcc.gaa.mes.gitproject.model.MyUser" />
<mapping class="dcc.gaa.mes.gitproject.model.MyCommit" />
<mapping class="dcc.gaa.mes.gitproject.model.MyCommitFile" />
<mapping class="dcc.gaa.mes.gitproject.model.MyCommitStats" />
<mapping class="dcc.gaa.mes.gitproject.model.MyCommitUser" />
<mapping class="dcc.gaa.mes.gitproject.model.MyRepositoryCommit" />
<mapping class="dcc.gaa.mes.gitproject.model.MySearchRepository" />

</session-factory>
</hibernate-configuration>